@model BikersBlog.Models.Student
@{
    ViewBag.Title = "Практика 2019";
}

<h2>Practice</h2>
<h3>@ViewBag.Message</h3>
<h2>Привет, @ViewBag.Username !</h2>
@using (Html.BeginForm("Practice", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" });
    <br>
    @Html.LabelFor(model => model.Age)
    @Html.EditorFor(model => model.Age)
    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" });
    <br>
    @Html.LabelFor(model => model.Group)
    @Html.EditorFor(model => model.Group)
    @Html.ValidationMessageFor(model => model.Group, "", new { @class = "text-danger" });
    <br />
    @Html.LabelFor(model => model.Birthday)
    @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", type = "date" } })
    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" });
    <br>
    if (Model.Univercity != null)
    {
        <input name="imageData" type="file" accept="image/x-png,image/gif,image/jpeg" />
        @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" });
        <img src="@Url.Content(Model.PhotoUrl)" width="100" />
    }
        <input class="btn btn-block" type="submit" value="Сохранить" />

    }
    <hr><hr><hr><hr><hr>
    @Html.LabelFor(model => model.Name)
    @Model.Name
    <br>
    @Html.LabelFor(model => model.Birthday)
    @Model.Birthday.ToString("yyyy-MM-dd")
    <br>
    @Html.LabelFor(model => model.Group)
    @Model.Group
    <br>
    @Html.LabelFor(model => model.Age)
    @Model.Age
    <br>
    @Html.LabelFor(model => model.IsSendDown)
    @Model.IsSendDown
    <br />
    @if (Model.Univercity != null)
    {
        @Html.LabelFor(model => model.Univercity.Name)
        @Model.Univercity.Name
        <br>
        @Html.LabelFor(model => model.Univercity.City)
        @Model.Univercity.City
        <br>
    }
    else
    {
        <h1>Университет не задан</h1>
    }
    @if (!String.IsNullOrEmpty(Model.PhotoUrl))
    {
        @Html.LabelFor(model => model.PhotoUrl)
        <img src="@Url.Content(Model.PhotoUrl)" width="100" />
    }

    <p>

        Регистрация<br>
        Блог любителей мотоспорта<br>


    </p>
