@model RealBlog.Models.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Авторизация";
}

<div class="my-panel tiny-panel">
    <div class="my-panel-header">
        <div class="my-header-text">
            Авторизация
        </div>
    </div>
    <div class="panel-body ">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
        <form>
            <div class="form-group ">
                @Html.LabelFor(model => model.Nickname, new { @class = "my-desc-text" })
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">


                @Html.LabelFor(model => model.Password, new { @class = "my-desc-text" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })



            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.Remembering, new { htmmAttributes = new { @class = "form-control" } })
                @Html.LabelFor(model => model.Remembering, new { @class = "my-desc-text" })
            </div>
            
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div>
                <button type="submit" class="btn button-grey btn-block">Войти</button>
            </div>
        </form>
        }

    </div>
</div>
  
<div class="tiny-panel">
